<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swipe_count_textview"
        tools:text="122"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorPrimary"
        android:textSize="120sp"
        android:fontFamily="sans-serif"
        app:layout_constraintVertical_bias="0.18" />

    <TextView
        android:text="@string/you_should_have"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/swipe_count_textview"
        android:layout_marginBottom="16dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:text="@string/swipes_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        app:layout_constraintRight_toRightOf="@+id/swipe_count_textview"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/swipe_count_textview"
        app:layout_constraintLeft_toLeftOf="@+id/swipe_count_textview"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <RadioGroup
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="@+id/swipe_count_textview"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintLeft_toLeftOf="@+id/swipe_count_textview"
        android:id="@+id/meal_selector">

        <RadioButton
            android:id="@+id/toggle_19p"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="19P"/>

        <RadioButton
            android:id="@+id/toggle_14p"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="14P"/>

        <RadioButton
            android:id="@+id/toggle_19"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="19"/>

        <RadioButton
            android:id="@+id/toggle_14"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="14"/>

        <RadioButton
            android:id="@+id/toggle_11"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="11"/>
    </RadioGroup>
</android.support.constraint.ConstraintLayout>